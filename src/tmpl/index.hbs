---
{{#mixin "common/content" this}}
  {{#content "main"}}
    {{#with body}}


            {{#mixin "components/post-list/post"}}
              {{#content "area"}}
              {{#mixin "areas/post"}}

                {{#content "content"}}
                    {{{mixin "components/media/code"}}}
                    {{{mixin "components/media/slider" ../../../post.area.slider}}}
                    {{{mixin "components/media/text"}}}
                    {{{mixin "components/media/image"}}}
                    {{{mixin "components/media/video"}}}
                    {{{mixin "components/media/video" youtube=null}}}
                {{/content}}

              {{/mixin}}
              {{/content}}
            {{/mixin}}


      {{{mixin "components/post-list/post"}}}

    {{/with}}
  {{/content}}

    {{#content "sidebar"}}
    {{{mixin "components/sidebar/menu"}}}
    {{{mixin "components/sidebar/post-list"}}}
  {{/content}}
{{/mixin}}
