---
<div class="controller partial swiper-container" data-controller="./partials/fragments/Slider" data-partial="fragments/slider"
{{#if loop}} data-loop="{{loop}}"{{/if}}{{#if autoplay}} data-autoplay="{{autoplay}}"{{/if}}{{#if speed}} data-speed="{{speed}}"{{/if}}>
<div class="swiper-wrapper">
  {{#block slides}}
    {{#each ./slides}}

      {{{mixin "elements/slider/image" this class="swiper-slide" }}}

    {{/each}}
  {{/block}}
</div>

{{#if pagination}}
  <div class="swiper-pagination"></div>
{{/if}}

{{#if arrows}}
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
{{/if}}

</div>
