---
autoplay: false
controls: true
loop: false
muted: false
poster: false
preload: false
src: false
width: "auto"
height: "auto"
sources:
  -
    media: false
    type: "video/mp4"
    src: "external/videos/bigbuckbunny.mp4"
---
<video
{{#if autoplay}} autoplay="{{autoplay}}"{{/if}}
{{#if controls}} controls="{{controls}}"{{/if}}
{{#if loop}} loop="{{loop}}"{{/if}}
{{#if muted}} muted="{{muted}}"{{/if}}
{{#if poster}} poster="{{poster}}"{{/if}}
{{#if preload}} preload="{{preload}}"{{/if}}
{{#if width}} width="{{width}}"{{/if}}
{{#if height}} height="{{height}}"{{/if}}
{{#if src}} src="{{src}}" {{/if}}>

  {{#each sources}}

    <source{{#if media}} media="{{media}}"{{/if}} type="{{type}}" src="{{src}}" />

  {{/each}}

</video>
