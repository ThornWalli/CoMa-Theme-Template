.partial[data-partial="components/footer"] {
  margin-top: 20px;
  padding: 0 $offset-default;
  overflow: hidden;
  > div {
    border-top: solid #cccccc 1px;
    > div {
      > * {
        margin: 10px 20px;
        @media (--screen-md) {
          margin: 10px 20px;
        }
      }
      padding-left: 0;
      padding-right: 0;
      > p {
        font-size: 14px;
        color: #888888;
        text-align: right;
      }
    }
  }
}
